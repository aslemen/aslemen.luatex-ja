\ProvidesPackage{ltja-mdframed}[2016/10/09]
\NeedsTeXFormat{LaTeX2e}

\@ifpackageloaded{etoolbox}{\relax}{\RequirePackage{etoolbox}}
\@ifpackageloaded{mdframed}{\relax}{\RequirePackage{mdframed}}

% define colors (in case that only the color package is available}
\definecolor{gray20}{gray}{0.8} 
\definecolor{gray60}{gray}{0.4}

% mdframed style: Title-Article-Aslemen (former title box for h-lua-repo)
\mdfdefinestyle{taa}{
			innerleftmargin = 0.5em,		innerrightmargin = 0,
			innertopmargin = 0,						innerbottommargin = 0,
			leftmargin = 0,								rightmargin = 0,
			skipabove = 0,								skipbelow = 0,
			topline = false,							rightline = false,
			bottomline = false,						leftline = true,
			linewidth = 1cm,							align = left}
			
% mdframed style: mdframed-Title-Article-Aslemen2 (former title box for h-lua-ho)
\mdfdefinestyle{taa2}{
			innerleftmargin = 0,					innerrightmargin = 0,
																		innerbottommargin = 3pt,
			leftmargin = 0,								rightmargin = 0,
			skipabove = 5pt,		skipbelow = 0,
			linewidth = 0.5pt,
			bottomline = true,						topline = false,
			leftline = false,							rightline = false,
			align = left,
			frametitlefont = {\Large},
			frametitlebackgroundcolor = gray60,
			frametitlefontcolor = white,	frametitlerule=false}

% mdframed style: mdframed-Aslemen-box (former h-lua-box)
\mdfdefinestyle{a-box}{
			innerleftmargin = 4pt, innerrightmargin = 4pt,
			innertopmargin = 4pt, innerbottommargin = 4pt,
			leftmargin = 0, rightmargin = 0,
			skipabove = \baselineskip, skipbelow = \baselineskip,
			linewidth = 1pt, linecolor = gray20,
			align = left,
			frametitlefont = \large\sffamily\gtfamily,
			frametitlebackgroundcolor = gray20,
			frametitlerule=false, usetwoside=false}

% mdframed environment: mdframed-Aslemen-Box-Circled (former h-lua-box)
\newenvironment{a-box-c}[1][\unskip]{%
			\newmdenv[style=h-lua-box, frametitle={$\acwopencirclearrow$~#1}]{a-box-c}}
{}

